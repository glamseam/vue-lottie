{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "esnext"
    }
}
